<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
			import ru.dmvow.model.custom.models.assotiationModel.CustomAssociationModel;
			import ru.dmvow.model.custom.models.assotiationModel.CustomItem;
			import ru.dmvow.model.pmml.models.associationModel.PMMLAssociationModel;
			
			protected var _model:CustomAssociationModel = null;
			
			[Bindable]
			public function get model():CustomAssociationModel
			{
				return _model;
			}
			
			public function set model(value:CustomAssociationModel):void
			{
				_model = value;
			}
		]]>
	</mx:Script>
	<mx:VBox width="100%" height="100%">
		<mx:Label text="Used classes:"/>
		<mx:List 
			width="100%" 
			dataProvider="{model.itemClasses}" 
			rowCount="{Math.min(model.itemClasses.length, 10)}"
			labelField="className"
			>
		</mx:List>
		<mx:Spacer height="20"/>
		<mx:Label text="Items:"/>
		<mx:DataGrid width="100%" dataProvider="{model.items}" rowCount="{Math.min(model.items.length + 1, 10)}">
			<mx:columns>
				<mx:DataGridColumn headerText="Id" dataField="id"/>
				<mx:DataGridColumn headerText="Value" dataField="value"/>
				<mx:DataGridColumn headerText="Class name" dataField="className"/>
			</mx:columns>
		</mx:DataGrid>
	</mx:VBox>
</mx:Canvas>
